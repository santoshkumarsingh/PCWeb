@model PCWeb.Models.InputViewModel

@{
    ViewBag.Title = "HashMd5";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
       <blockquote>
    <p>This simple tool computes the MD5 hash of a string. Also available is a @Html.ActionLink("SHA-1", "SHA1", "Home"),@Html.ActionLink("SHA-256", "SHA256", "Home") and @Html.ActionLink("SHA-512", "SHA512", "Home").</.</p>
</blockquote>
</p>
<div class="row-fluid">
 
    <div class="span8">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
   
            <fieldset>
                <legend>InputViewModel</legend>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Input)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.Input,new  { @class = "input-xxlarge",cols=20,rows=5 })
                    @Html.ValidationMessageFor(model => model.Input)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Output)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.Output,new  { @class = "input-xxlarge",cols=20,rows=5 })
                    @Html.ValidationMessageFor(model => model.Output)
                </div>

                <p>
                    <input type="submit" value="Calculate Md5" class="btn btn-primary" />
                </p>
            </fieldset>
   
        }
    </div>

    @Html.Partial("_HashDescription");

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
