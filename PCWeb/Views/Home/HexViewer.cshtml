@model PCWeb.Models.InputViewModel

@{
    ViewBag.Title = "HexViewer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .myinput {
        width:800px;
    }
</style>
<h2>HexViewer</h2>

@using (Html.BeginForm("HexViewer", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })){
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

       <div class="editor-label">
                    @Html.LabelFor(model => model.Input, "Select File")
                </div>
                <div class="editor-field">
                    <input type="file" name="file" />
                    @Html.ValidationMessageFor(model => model.Input)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Output)
                </div>
                <div class="editor-field">
                    @Html.LabelFor(model => model.Output, new { @class = "myinput", cols = 50, rows = 20 })
                    
                    @Html.ValidationMessageFor(model => model.Output)
                </div>
        <p>
            <input type="submit" value="View" class="btn btn-primary" />
        </p>
    </fieldset>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
